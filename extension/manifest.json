{
    "manifest_version": 2,
    "name": "Machine Reading",
    "description": "Ask any questions about the article you are reading and let the computer answer it for you.",
    "version": "1.0",
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["./assets/scripts/axios.js", "./assets/scripts/content.js"],
            "run_at": "document_end"
        }
    ],

    "permissions": ["tabs", "background"],

    "icons": {},

    "background": {
        "scripts": []
    },

    "browser_action": {
        "default_icon": "./assets/images/icon.png",
        "default_title": "Read for me",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' https://unpkg.com; object-src 'self'"
}
